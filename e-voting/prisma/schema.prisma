generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Voter {
  id  Int @id @default(autoincrement())
  voter_id  String  @unique
  name  String
  dob DateTime
  phone String @unique
  otp Int
}

model Party {
  id  Int @id @default(autoincrement())
  name  String  @unique
  logo  String
  password String

}

model Election {
  id  Int @id @default(autoincrement())
  name String @unique
  voter_count Int
  election_type String
  start_date DateTime
  end_date DateTime
  description String
}


