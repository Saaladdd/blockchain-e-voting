// Prisma schema for blockchain-based e-voting system

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Voter {
  id        Int       @id @default(autoincrement())
  voter_id  String    @unique
  name      String
  dob       DateTime
  phone     String    @unique
  otp       Int?
  votes     Vote[]    // relation to the votes this voter cast
}

model Party {
  id        Int       @id @default(autoincrement())
  name      String    @unique
  logo      String
  password  String
  votes     Vote[]    // relation to votes for this party
}

model Election {
  id            Int       @id @default(autoincrement())
  name          String    @unique
  voter_count   Int
  election_type String
  start_date    DateTime
  end_date      DateTime
  description   String
  votes         Vote[]    // relation to votes in this election
}

model Vote {
  id         Int       @id @default(autoincrement())
  voter      Voter     @relation(fields: [voterId], references: [id])
  voterId    Int
  party      Party     @relation(fields: [partyId], references: [id])
  partyId    Int
  election   Election  @relation(fields: [electionId], references: [id])
  electionId Int
  createdAt  DateTime  @default(now())
  
  @@unique([voterId, electionId]) // prevents double voting in same election
}
