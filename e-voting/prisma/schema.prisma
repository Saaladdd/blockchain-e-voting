generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 
model Voter {
  id          Int       @id @default(autoincrement())
  name        String    
  idHash      String    @unique
  phoneNumber String    @unique
  otp         Int?

}

// Matches Solidity struct Candidate
model Candidate {
  id         Int      @id @default(autoincrement())
  name       String   @unique
  voteCount  Int      @default(0)
  createdAt  DateTime @default(now())
}

// Optional local mirror of blockchain transactions
model VoteRecord {
  id          Int      @id @default(autoincrement())
  candidateId Int
  txHash      String?  // blockchain transaction hash
  createdAt   DateTime @default(now())
}
